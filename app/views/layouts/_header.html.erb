	<div class="navbar-inner">
		<div class="container">
			<%= link_to "QA Hub", root_path, id: "logo" %>
			<nav>
				<ul class="nav pull-right">
					<li class="top-level <%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
					<li class="top-level <%= 'active' if current_page?(releases_path) %>"><%= link_to "Releases", releases_path %></li>
